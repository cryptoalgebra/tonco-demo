{
    "compilerOptions": {    
      "target": "ESNext",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "strict": true,    
      "resolveJsonModule": true,
      "skipLibCheck": true,   
      "sourceMap": true,
      "outDir": "./build/dist",
  
    },
    "ts-node": {
      "transpileOnly": true,
      "transpiler": "ts-node/transpilers/swc"
    },  
    "include": [
      "scripts/**/*",
      "wrappers/**/*",
      "jest/**/*"
    ],
    "exclude": ["node_modules", "build"]
  }
  